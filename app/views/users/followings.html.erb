<h1>Follow Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <% @followings.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50' %></td>
      <td><%= user.name %></td>
      <td><%= "フォロー数: #{user.following_user.count}" %></td>
      <td><%= "フォロワー数: #{user.follower_user.count}" %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
</table>