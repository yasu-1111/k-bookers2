<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
      <p>name <%= @user.name %></p>
      <p>introduction <%= @user.introduction %></p>
      <%= link_to icon("fas", "user-cog"), edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-sm w-100' %>

      <h1>New book</h1>
      <%= form_with model: @book, local: true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %><br>
      <%= f.submit "Create Book" %>
      <% end %>
    </div>
    <div class="col-md-9">
    <h1>Books</h1>
      <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
        <% @books.each do |book| %>
        <tr>
          <td>
              <%= link_to do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50' %>
              <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>