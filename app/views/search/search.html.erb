<% if @user_or_book == "1" %>
  <h1>Users Search</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Show</th>
      </tr>
    </thead>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
  </table>

  <% elsif @user_or_book == "2" %>
    <h1>Books Search</h1>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opnion</th>
        </tr>
      </thead>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
    </table>
<% else %>
<% end %>