<p>コメント<%= book_comments.count %></p>
<% book_comments.each do |book_comment| %>
  <%= attachment_image_tag book_comment.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: 'no_image.jpg', size:'20x20' %>
  <%= book_comment.user.name %>
  <%= book_comment.created_at.strftime('%Y/%m/%d') %><br>
  <p>コメント：<%= book_comment.comment %></p>
  <% if book_comment.user == current_user %>
  <div class="comment-delete">
  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
  </div>
  <% end %>
<% end %>
<%= paginate book_comments %>